CREATE DATABASE DAMI;
USE DAMI;
CREATE TABLE  BUYER(
ROW_ID BIGINT PRIMARY KEY AUTO_INCREMENT COMMENT'主键',
BUYER_TYPE  INT(10) NOT NULL  COMMENT'用户类型',
BUYER_NAME  VARCHAR(20) NOT NULL COMMENT'用户名称',
BUYER_CODE   VARCHAR(20) NOT NULL  UNIQUE COMMENT'用户账号',
BUYER_PASS  VARCHAR(60) NOT NULL COMMENT'用户密码',
BUYER_PHONE  VARCHAR(20) NOT NULL COMMENT'用户手机',
BUYER_LOCKING INT COMMENT '是否锁定，1为正常 0为锁定',
ACTIVE_FLAG INT COMMENT '是否有效，1为有效 0为无效',
BUYER_LAST_UP VARCHAR(20)COMMENT '最后的登录IP',
BUYER_LAST_DATE DATETIME COMMENT'最后的登录日期',
CREATE_BY VARCHAR(20) COMMENT'创建人',
CREATE_DATE  DATETIME COMMENT'创建时间',
UPDATE_BY VARCHAR(20) COMMENT'修改人',
UPDATE_DATE DATETIME COMMENT'修改时间'
)COMMENT'用户表'


CREATE TABLE TB_GOOD(
	GD_ID BIGINT PRIMARY KEY AUTO_INCREMENT COMMENT '主键',
	GOOD_ID BIGINT NOT NULL COMMENT '目录ID',
	GOOD_NAME VARCHAR(20) NOT NULL UNIQUE COMMENT '商品名称',
	GOOD_NUMBER VARCHAR(20) NOT NULL UNIQUE COMMENT '商品编号',
	GOOD_PICTURE VARCHAR(200) COMMENT '商品图片',
	GOOD_PRICE BIGINT COMMENT '商品价格',
	GOOD_AMOUNT BIGINT COMMENT '商品库存',
	GOOD_STATE INT DEFAULT 1 COMMENT '商品状态 1:上架  2:下架',
	GOOD_INFO TEXT COMMENT '商品介绍',
	ACTIVE_FLAG INT DEFAULT 1 COMMENT '是否有效 1:是  2:否',
	CREATE_BY VARCHAR (10)COMMENT'创建人',
	CREATE_DATE DATETIME COMMENT'创建时间',
	UPDATE_BY VARCHAR(10) COMMENT'修改人',
	UPDATE_DATE DATETIME COMMENT'修改时间'	
)COMMENT'商品表'

